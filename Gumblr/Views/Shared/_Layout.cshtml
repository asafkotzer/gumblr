            var userName = "@User.Identity.GetUserName()";

            if (userName != "") {
                mixpanel.people.set_once({ "Name": userName });
                mixpanel.identify(userId);
            }

            mixpanel.track('page viewed', {
                'page name': document.title.replace(" | GUMBLR", ""),
                'url': window.location.pathname
            });
        });
