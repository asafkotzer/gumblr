@model Gumblr.Models.BettingModel

@{
    ViewBag.Title = "Place your bets";
}

@section ViewHeader {
    @Scripts.Render("~/Scripts/GameBet/PlaceBetsViewModel.js")
    @Scripts.Render("~/Scripts/GameBet/PlaceBets.js")
    @Scripts.Render("~/Scripts/spin.min.js")
    @Scripts.Render("~/Scripts/moment.js")
    @Scripts.Render("~/Scripts/Shared/loader.js")
    @Scripts.Render("~/Scripts/jquery.flot.min.js")
    @Scripts.Render("~/Scripts/jquery.flot.pie.min.js")
    @Scripts.Render("~/Scripts/chosen.jquery.min.js")
    @Scripts.Render("~/Scripts/chosen.proto.min.js")
    @Styles.Render("~/Content/themes/base/jquery-ui.css")
    @Styles.Render("~/Content/themes/base/minified/chosen.min.css")
    @Styles.Render("~/Content/themes/default/placebets.css")
    @Styles.Render("~/Content/themes/default/shared.css")

    <script>
        $(document).ready(function () {
            var model = @Html.Raw(Json.Encode(Model));
            var placeBets = new PlaceBets(model);
            placeBets.init();
        });
    </script>
}

<div class="WinnerSelectionFrame">
    <div class="WinnerSelectionFrameTitle">
        <span>Champion</span>
    </div>
    <div class="SelectContainer">
        <select class="DropDown" data-bind="options: possibleWinners, value: winner, optionsCaption: '...'"> </select>
    </div>
    <div class="SelectedItemContainer">
        <img class="Logo" data-bind="attr:{src: winnerLogo}" />
    </div>
</div>

<ul data-bind="foreach: games" class="BetList">
    <li>
        <div class="MatchContainer">
            <div class="ActualResultFrame">
                <div class="SuccessIndicatorContainer">
                    <img data-bind="attr:{src: match.SuccessIndicator()}" class="SelectionMarker" />
                </div>
            </div>

            <div class="MatchFrame">
                <p class="MatchTitle">
                    <span class="TeamName" data-bind="text: match.Host"></span>
                    vs.
                    <span class="TeamName" data-bind="text: match.Visitor"></span>
                </p>
                <p class="MatchSubtitle">
                    <span data-bind="text: match.Venue"></span>
                </p>
                <p class="MatchSubtitle">
                    <span data-bind="text: moment(match.StartTime).format('MMMM Do YYYY, h:mm:ss a')"></span>
                </p>
                <div>
                    <div class="LogoContainer">
                        <input class="Logo Host" type="image" data-bind="attr:{src: match.HostLogoUrl}, click: selected, css: { 'Selected': match.ExpectedResult() == 0 }" />
                        <img src="/Images/UpArrow.png" class="SelectionMarker" />
                    </div>
                    <div class="LogoContainer">
                        <input class="Logo" type="image" data-bind="click: selected, css: { 'Selected': match.ExpectedResult() == 1, 'Draw': match.ExpectedResult() != 1 }" src="/Images/Draw.png" />
                        <img src="/Images/UpArrow.png" class="SelectionMarker" />
                    </div>
                    <div class="LogoContainer">
                        <input class="Logo Visitor" type="image" data-bind="attr:{src: match.VisitorLogoUrl}, click: selected, css: { 'Selected': match.ExpectedResult() == 2 }" />
                        <img src="/Images/UpArrow.png" class="SelectionMarker" />
                    </div>
                </div>
            </div>

            <div class="StatisticsFrame">
                <div class="ShowStatisticsButtonContainer">
                    <button class="DefaultButton" data-bind="click: showStatistics">show stats</button>
                </div>
                <div class="LoaderContainer">

                </div>
            </div>
        </div>
    </li>
</ul>
<div class="StatusLine">
    <p class="StatusText">
        <span data-bind="text: statusLine"></span>
        <a data-bind="click: uploadBets">submit</a>
    </p>
</div>
